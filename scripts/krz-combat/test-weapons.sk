			set {_i} to iron horse armor named "&7&lRF-024 FALCO"
			set lore of {_i} to "&8Standard Issue Rifle"
			
			set {_nbt} to nbt compound from "{}"
			set int tag "TechItem" of {_nbt} to 1
			set string tag "TechType" of {_nbt} to "WEAPON"
			set string tag "TechWeaponClass" of {_nbt} to "RIFLE"
			set string tag "TechAttribute" of {_nbt} to "PHYSICAL"
			set int tag "TechPower" of {_nbt} to 1
			set int tag "TechAtk" of {_nbt} to 6
			set int tag "TechImpact" of {_nbt} to 12
			set int tag "TechRange" of {_nbt} to 80
			set int tag "TechCooldown" of {_nbt} to 6
			set int tag "TechCost" of {_nbt} to 0
			set int tag "TechMagSize" of {_nbt} to 30
			set int tag "TechReload" of {_nbt} to 60
			
			add {_nbt} to custom nbt of {_i}
			add "" to lore of {_i}
			add "&8ATK:6 IMP:12 RNG:80" to lore of {_i}
			add "&8MAG:30 RELOAD:60" to lore of {_i}
			
			give {_i} to player
