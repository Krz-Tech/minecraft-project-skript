# -------------------------------------------------------------------------
# Main Menu Click Handler
# -------------------------------------------------------------------------
on inventory click:
	if name of player's current inventory contains "メインメニュー":
		cancel event
		
		if index of clicked slot is 11:  # Profile
			gui_play_click(player)
			close player's inventory
			wait 1 tick
			open_profile_menu(player)
			
		else if index of clicked slot is 31:  # Economy
			gui_play_click(player)
			close player's inventory
			wait 1 tick
			open_economy_menu(player)
			
		else if index of clicked slot is 49:  # Close
			gui_play_close(player)
			close player's inventory
			
