on inventory click:
	if name of player's current inventory contains "経済メニュー":
		cancel event
		
		if index of clicked slot is 15:  # Shop (coming soon)
			gui_play_click(player)
			send "&6[Economy] &7建材ショップは現在開発中です。" to player
			
